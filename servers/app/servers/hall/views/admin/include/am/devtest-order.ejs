<div class="col-md-6">
  <section class="panel panel-collapsed">
    <header class="panel-heading">
      <div class="panel-actions">
        <a href="#" class="panel-action panel-action-toggle" data-panel-toggle=""></a>
        <a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss=""></a>
      </div>

      <h2 class="panel-title">
        <%= txt_title_order %>
        </h2>
      <p class="panel-subtitle">
        <%= txt_content_order %>
      </p>
    </header>
    <div class="panel-body">


      <!-- FORM1: 请求订单号需要传入的参数 -->
      <form>
        <div class="col-md-12 form-group mb-lg">
          <label>物品ID</label>
          <input id="input-get-order-goods-id" name="goods_id" type="text" class="form-control input-lg" value="1" />
        </div>
      </form>
    <button id="btn-get-order" class="btn btn-primary hidden-xs">获取订单</button>


      <!-- FORM2: 轮询检查订单状态需要传入的参数 -->
      <form>
        <div class="col-md-12 form-group mb-lg">
          <label>订单号</label>
          <input id="input-order-id" name="game_order_id" type="text" class="form-control input-lg" value="1" />
        </div>
      </form>
    <button id="btn-check-order-status" class="btn btn-primary hidden-xs">开始轮询</button>


      <!-- FORM3: 订单状态显示 -->
      <form>
        <div class="col-md-12 form-group mb-lg">
          <label>订单状态</label>
          <input id="input-order-status" name="order_status" type="text" class="form-control input-lg" value="1" />
        </div>
      </form>
      
    </div>
  </section>
</div>